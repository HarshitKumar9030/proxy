<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8" />
  <title>Proxy Browser</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <meta name="color-scheme" content="dark light" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <link rel="stylesheet" href="/browser-styles.css" />
</head>
<body>
  <div class="browser-wrapper">
    <!-- Browser Chrome/UI -->
    <div class="browser-chrome">
      <!-- Tab Bar -->
      <div class="tab-bar">
        <div class="tab active" data-tab="0">
          <span class="tab-title">New Tab</span>
          <i class="fas fa-times tab-close"></i>
        </div>
        <div class="tab-add" title="Add new tab">
          <i class="fas fa-plus"></i>
        </div>
      </div>
      
      <!-- Browser Controls -->
      <div class="browser-controls">
        <div class="nav-buttons">
          <button class="nav-btn back-btn" title="Go back" disabled>
            <i class="fas fa-arrow-left"></i>
          </button>
          <button class="nav-btn forward-btn" title="Go forward" disabled>
            <i class="fas fa-arrow-right"></i>
          </button>
          <button class="nav-btn refresh-btn" title="Refresh">
            <i class="fas fa-redo"></i>
          </button>
          <button class="nav-btn home-btn" title="Home">
            <i class="fas fa-home"></i>
          </button>
        </div>
        
        <div class="address-bar">
          <div class="security-indicator">
            <i class="fas fa-lock"></i>
          </div>
          <input type="text" class="url-input" placeholder="Enter URL or search..." value="proxy://start" />
          <button class="go-btn" title="Go">
            <i class="fas fa-arrow-right"></i>
          </button>
        </div>
        
        <div class="browser-menu">
          <button class="menu-btn fullscreen-btn" title="Fullscreen">
            <i class="fas fa-expand"></i>
          </button>
          <button class="menu-btn settings-btn" title="Settings">
            <i class="fas fa-cog"></i>
          </button>
          <button class="menu-btn more-btn" title="More options">
            <i class="fas fa-ellipsis-v"></i>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Content Area -->
    <div class="content-area">
      <div class="tab-content active" data-tab="0">
        <div class="start-page">
          <div class="start-header">
            <h1>ðŸš€ Proxy Browser</h1>
            <p>Browse the web through our secure proxy</p>
          </div>
          
          <div class="search-container">
            <div class="search-box">
              <input type="text" class="search-input" placeholder="Enter URL or search term..." />
              <button class="search-btn">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          
          <div class="quick-access">
            <h3>Quick Access</h3>
            <div class="quick-links">
              <a href="#" data-url="https://google.com" class="quick-link">
                <i class="fab fa-google"></i>
                <span>Google</span>
              </a>
              <a href="#" data-url="https://youtube.com" class="quick-link">
                <i class="fab fa-youtube"></i>
                <span>YouTube</span>
              </a>
              <a href="#" data-url="https://github.com" class="quick-link">
                <i class="fab fa-github"></i>
                <span>GitHub</span>
              </a>
              <a href="#" data-url="https://stackoverflow.com" class="quick-link">
                <i class="fab fa-stack-overflow"></i>
                <span>Stack Overflow</span>
              </a>
            </div>
          </div>
          
          <div class="recent-history">
            <h3>Recent History</h3>
            <div class="history-list">
              <% if (recent && recent.length > 0) { %>
                <% recent.slice(0, 6).forEach(r => { %>
                  <div class="history-item" data-url="<%= r.url %>">
                    <div class="history-favicon">
                      <i class="fas fa-globe"></i>
                    </div>
                    <div class="history-info">
                      <div class="history-title"><%= r.target_host %></div>
                      <div class="history-url"><%= r.url %></div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <p class="no-history">No recent history</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Loading Overlay -->
    <div class="loading-overlay hidden">
      <div class="loading-spinner">
        <i class="fas fa-spinner fa-spin"></i>
        <span>Loading...</span>
      </div>
    </div>
  </div>

  <!-- Context Menu -->
  <div class="context-menu hidden">
    <div class="menu-item" data-action="back">
      <i class="fas fa-arrow-left"></i>
      <span>Go Back</span>
    </div>
    <div class="menu-item" data-action="forward">
      <i class="fas fa-arrow-right"></i>
      <span>Go Forward</span>
    </div>
    <div class="menu-separator"></div>
    <div class="menu-item" data-action="refresh">
      <i class="fas fa-redo"></i>
      <span>Refresh</span>
    </div>
    <div class="menu-item" data-action="home">
      <i class="fas fa-home"></i>
      <span>Home</span>
    </div>
    <div class="menu-separator"></div>
    <div class="menu-item" data-action="history">
      <i class="fas fa-history"></i>
      <span>View History</span>
    </div>
    <div class="menu-item" data-action="settings">
      <i class="fas fa-cog"></i>
      <span>Settings</span>
    </div>
  </div>

  <script src="/browser-script.js"></script>
</body>
</html>
